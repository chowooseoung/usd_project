#usda 1.0
(
    defaultPrim = "ball"
)

over "ball" (
    variants = {
        string geom = "sphere"
    }
    append variantSets = "geom"
)
{
    variantSet "geom" = {
        "egg" (
            prepend payload = @./egg/ball.egg.version.usda@
        )
        {
            over "payload" (
                variants = {
                    string geom = "egg"
                }
            )
            {
            }
        }
        "sphere" (
            prepend payload = @./sphere/ball.sphere.version.usda@
        )
        {
            over "payload" (
                variants = {
                    string geom = "sphere"
                }
            )
            {
            }
        }
    }
}

